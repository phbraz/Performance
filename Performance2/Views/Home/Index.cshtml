@using Performance2.Models.ViewModels
@using Performance2.Data.Models
@model WorkerViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Workers Login</h1>
    <div class="m-4"></div>
    <form id="formWorker" method="post" asp-action="SaveWorkerChanges">
        <table id="Workers-Table" class="table table-dark">
            <tr>
                <th>Worker Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Login Id</th>
            </tr>
    
            @{
                foreach(var worker in Model.Workers)
                {
                    <tr>
                        <td>@worker.Id</td>                                                
                        <td>@worker.FirstName</td>                                               
                        <td>@worker.LastName</td>                        
                        <td>@worker.LoginID</td>            
                    </tr>                                                           
                }
            }
        </table>
        <input type="submit" class="btn btn-primary btn-lg" value="Save Changes" />       
    </form>
    

</div>